border-1px($color, $dir)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width 100%
    {$dir}: 1px solid $color
    content: ' '
    box-sizing border-box

border-none()
  &:after
    display none
text-overflow-e()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap